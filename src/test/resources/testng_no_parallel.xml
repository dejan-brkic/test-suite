<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="craftercms - Studio UI -AllTestCases TestSuite No Parallel"  verbose="3">
    <test name="Change Password User Test">
        <classes>
            <class name="org.craftercms.studio.test.cases.accountmanagementtestcases.ChangePasswordUserTest"/>
        </classes>
    </test>
    <test name="Verify that the application allows to filter the number of sites displayed per page">
        <parameter name="testId" value="sites006"/>
        <parameter name="blueprint" value="empty"/>
        <classes>
            <class name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToFilterNumberOfSitesPerPage"/>
        </classes>
    </test>
    <test name="Edit User Test">
        <parameter name="testUser" value="users0044"/>
        <classes>
            <class name="org.craftercms.studio.test.cases.userstestcases.EditUserTest"/>
        </classes>
    </test>
    <test name="Users Per Page Test">
        <parameter name="testUser" value="usersid01"/>
        <classes>
            <class name="org.craftercms.studio.test.cases.userstestcases.UsersPerPageTest"/>
        </classes>
    </test>
    <test name="Verify that the application allows to bulk upload assets correctly">
        <parameter name="testId" value="content046"/>
        <parameter name="blueprint" value="editorial"/>
        <classes>
            <class name="org.craftercms.studio.test.cases.contenttestcases.VerifyBulkUploadAssetsWorksProperlyTest"/>
        </classes>
    </test>
</suite> <!-- Suite -->